.container { padding:20rpx; }
.list-item { margin: 0 0 60rpx 0; box-shadow: 0 30rpx 50rpx #ddd; border-radius: 20rpx; }
.content-thumbnail { border-radius: 20rpx 20rpx 0 0; }
.content-main { padding:20rpx;  }
.content-title { font-size: 30rpx; color: #000; line-height: 1.5; font-weight: bold; }
.content-sub { font-size: 24rpx; color: #999; line-height: 1.5; }

.common-list .list-item.has-img .content-title text {
  font-size: 30rpx;
  color: #000000;
  line-height: 1.2;
  font-weight: bold;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.common-list .list-item.has-img .content-sub text {
  font-size: 25rpx;
  color: #444444;
  line-height: 1;
  font-weight: normal;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}


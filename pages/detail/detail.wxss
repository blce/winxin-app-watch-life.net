@import "../../wxParse/wxParse.wxss";

.detail-contain { width: auto; padding:0 20rpx; }
.entry-date {
  color: #999;
  font-size: 24rpx;
  line-height: 1.2;
  font-weight: normal;}
.entry-title {
  color: #000;
  font-size: 36rpx;
  line-height: 1.2;
  font-weight: normal;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  }
.entry-summary { font-size: 30rpx; }


.commentheader {
  padding: 50rpx 0;
  text-align: left;
  font-weight: normal;
  font-size: 30rpx;
  line-height: 40rpx;
  color: #757575;
}

.comment {
  border-bottom: 2rpx solid #ededed;
}

.comment-user {
  font-size: 30rpx;
  line-height: 1.2;
  font-weight: normal;
  outline: none;
  color: #000;
  margin-bottom: 10rpx;
  margin-top: 25rpx;
}

.comment-date {
  font-size: 24rpx;
  line-height: 1.2;
  font-weight: normal;
  outline: none;
  color: #999;
  margin-bottom: 10rpx;
}

.comment-response {
  color: #757575;
  font-size: 30rpx;
  line-height: 1.8rem;
  margin-bottom: 20rpx;
}

.comment-summary {
  color: #757575;
  font-size: 30rpx;
  line-height: 1.8rem;
  margin-bottom: 40rpx;
}

.entry-summary image{
  width:100%!important;
} 

.comment-respond {
  margin: 40rpx 0 0 0;
}

.comment-reply-title {
  font-size: 36rpx;
  line-height: 1.5;
  color: #666;
}

.comment-input {
  height: 2.58823529em;
  min-height: 2.58823529em;
  line-height: 2.58823529em;
  border: 1px solid #ccc;
  margin-top: 20rpx;
}

.comment-area {
  border: 1px solid #ccc;
  margin-top: 20rpx;
  width: auto;
}

.comment-button {
  font-size: 0.785714286rem;
  font-weight: normal;
  color: #fff;
  background-color: #292929;
  background-repeat: repeat-x;
}

.textNoEmpty {
  color: red;
}
